{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "noEmit": true,
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": []
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}


