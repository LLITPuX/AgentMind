# ======================
# Backend API
# ======================
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# ======================
# CORS
# ======================
# Дозволені origin-и (через кому). Для локальної розробки лишіть як є.
CORS_ALLOW_ORIGINS=http://localhost:5173

# ======================
# PostgreSQL
# ======================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=agentmind
POSTGRES_USER=agentmind
POSTGRES_PASSWORD=agentmind

# ======================
# Redis (кеш/сесії)
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=

# ======================
# FalkorDB (Graph, Redis protocol)
# ======================
FALKORDB_HOST=falkordb
FALKORDB_PORT=6379
# FALKORDB_PASSWORD=
FALKORDB_GRAPH=agentmind

# ======================
# LLM / Agent (Google Gemini)
# ======================
# Обов'язково встав свій ключ:
GOOGLE_API_KEY=your_real_google_api_key_here

# Моделі за замовчуванням (можна змінити за потреби)
GEMINI_CHAT_MODEL=gemini-flash-lite-latest
GEMINI_ANALYSIS_MODEL=gemini-2.5-flash

# ======================
# Frontend
# ======================
# Куди фронтенд стукає за API
VITE_API_BASE_URL=http://localhost:8000